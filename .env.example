# Supabase (required for storage and blog)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Server-side Supabase access (blog table writes, storage uploads, and creating blog-posts bucket; bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Admin blog: secret used to protect /admin and /api/admin/*
# Set this and use it when logging in at /admin (or send as x-admin-secret header).
ADMIN_SECRET=your_admin_secret_here
